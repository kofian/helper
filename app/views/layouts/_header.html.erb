<header class="navbar navbar-fixed-top navbar-default">
 <div class="container">
<div id="logo">
<%= image_tag("helper.png") %>
</div>
<div class="nav_item">
<%= link_to (@page_title || "Thanks Giving"), charity_path, class: "btn btn-lg btn-success" %>
</div>
<div class="nav_item">
 <%= link_to "Projects", projects_path, class: "btn btn-default btn-warning" %>
</div>
<% if user_signed_in? %>
<ul class="nav_item">
 <li class="dropdown">
  <%= link_to '#', class: "btn btn-default  btn-danger dropdown-toggle", "data-toggle" => "dropdown" do %>
   <%= current_user.name %> <b class="caret"></b>
 <% end %>

 <ul class='dropdown-menu'>
   <li><%= link_to 'Create a new Project', new_project_path %></li>
  <li><%= link_to 'Profile', profile_path(id: current_user.id) %></li>
  <% if current_user.admin? %> 
   <li><%= link_to 'Manage Users', admin_users_path %></li> 
   <li><%= link_to 'Manage Projects', admin_projects_path %></li>
  <% end %>
  <li class="divider"></li>
  <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
 </ul>
 </li>
 </ul>
 <% else %>
 <ul class="nav_item">
  <li class="dropdown">
   <%= link_to '#', class: "btn btn-default btn-info dropdown-toggle", "data-toggle" => "dropdown" do %>
     Guest User? <b class="caret"></b>
   <% end %>
  <ul class='dropdown-menu'>
  <li><%= link_to 'Log In', new_user_session_path %></li>
   <li class="divider"></li>
  <li><%= link_to 'Sign Up', new_user_registration_path %></li>
  </ul>
  </li>
 </ul>
<% end %>



<div class="nav_item pull-right">
    
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
   Your Pledges
    <span class="caret"></span>
  </button>
<ul class="dropdown-menu">
<li class="carts">
 <% if @cart %>
 <%= hidden_div_if(@cart.pledges.empty?, id: 'cart') do %>
 <%= render @cart %>
 <% end %>
 <% end %>
</li>`
</ul>
</div>

</div>

<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '1984108125214032',
      xfbml      : true,
      version    : 'v3.0'
    });
    FB.AppEvents.logPageView();
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "https://connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>
</header>
